{
  "name": "@raresail/nestjs-lazy-typeorm",
  "version": "1.0.0",
  "description": "This package extends @nestjs/typeorm and allows lazy connection for typeorm",
  "author": "",
  "private": false,
  "license": "MIT",
  "main": "dist/index.js",
  "files": [
    "dist/**/*",
    "*.md"
  ],
  "keywords": [
    "lazy-loading",
    "stateless",
    "typeorm",
    "nestjs",
    "lazy"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "yarn lint && rimraf -r dist && tsc",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:e2e": "jest --runInBand --ci --config ./test/jest-e2e.json"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/RaresAil/nestjs-lazy-typeorm.git"
  },
  "bugs": "https://github.com/RaresAil/nestjs-lazy-typeorm/issues",
  "peerDependencies": {
    "@nestjs/common": "^8.0.0",
    "@nestjs/core": "^8.0.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.2.0",
    "typeorm": "0.2.45"
  },
  "dependencies": {
    "@nestjs/typeorm": "^8.0.3"
  },
  "resolutions": {
    "minimist": "^1.2.6"
  },
  "devDependencies": {
    "@nestjs/common": "^8.4.4",
    "@nestjs/core": "^8.4.4",
    "@nestjs/mapped-types": "^1.0.1",
    "@nestjs/platform-express": "^8.4.4",
    "@nestjs/schematics": "^8.0.11",
    "@nestjs/testing": "^8.4.4",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.5.1",
    "@types/node": "^17.0.32",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.23.0",
    "@typescript-eslint/parser": "^5.23.0",
    "eslint": "^8.15.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^28.1.0",
    "prettier": "^2.6.2",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.5.5",
    "sqlite3": "^5.0.8",
    "supertest": "^6.2.3",
    "ts-jest": "^28.0.2",
    "ts-loader": "^9.3.0",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "^4.0.0",
    "typeorm": "0.2.34",
    "typescript": "^4.6.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
